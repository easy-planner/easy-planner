<Window x:Class="EasyPlanner.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyPlanner"
        mc:Ignorable="d"
        Title="AddUser" Height="404.625" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="187*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button" Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="61,792,0,0" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="label" Content="Label" Margin="28,27,94,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_name1" Content="Nom" HorizontalAlignment="Left" Margin="28,46,0,0" VerticalAlignment="Top" Width="55" RenderTransformOrigin="0.033,0.731"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="93,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" TabIndex="2"/>
        <Label x:Name="lbl_name" Content="Nom" Margin="28,27,64,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_firstname" Content="Prénom" HorizontalAlignment="Left" Margin="28,19,0,0" VerticalAlignment="Top" Width="122" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txt_firstname" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="0.333,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.479,-1.558" TabIndex="1"/>
        <TextBox x:Name="txtavs" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="30.667,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="89" TabIndex="3"/>
        <Label x:Name="lbl_avs" Content="Numéro AVS" Margin="28,78,156.667,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label x:Name="lbl_pourcentage" Content="Taux %" HorizontalAlignment="Left" Margin="28,104,0,0" VerticalAlignment="Top" Width="55"/>
        <TextBox x:Name="txt_occupencyrate" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="69.667,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" TabIndex="4"/>
        <Button x:Name="btn_save" Content="Sauvegarder" HorizontalAlignment="Left" Margin="44,345,0,0" VerticalAlignment="Top" Width="75" Click="btn_save_Click" Grid.ColumnSpan="2" TabIndex="25"/>
        <ComboBox x:Name="cob_role" HorizontalAlignment="Left" Margin="93,140,0,0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" TabIndex="5"/>
        <Label x:Name="lblRole" Content="Rôle" HorizontalAlignment="Left" Margin="28,137,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="pwdPassword" Margin="0,167,67.667,0" VerticalAlignment="Top" Height="22" HorizontalAlignment="Right" Width="89" TabIndex="6" Grid.Column="1"/>
        <Label x:Name="lblPassword" Content="Mot de passe" HorizontalAlignment="Left" Margin="28,171,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="98"/>
        <TextBox x:Name="txtDescription" Grid.Column="1" HorizontalAlignment="Left" Height="96" Margin="30.667,203,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="89" TabIndex="7" AcceptsTab="True"/>
        <Label x:Name="lblDescription" Content="Description" HorizontalAlignment="Left" Margin="28,203,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="98" RenderTransformOrigin="0.457,1.808"/>
        <Button x:Name="btnCancel" Content="Annuler" Grid.Column="1" HorizontalAlignment="Left" Margin="45.667,345,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
    </Grid>
</Window>
